{
  "name": "mcp-vscode-ext-template",
  "displayName": "MCP VSCode Extension template",
  "description": "VS Code extension using MCP running locally ",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.80.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ollama-vscode-ext-template.mcp-analyze-variable-name",
        "title": "MCP: Analyze Variable Name"
      },
      {
        "command": "ollama-vscode-ext-template.ollama-analyze-variable-name",
        "title": "Ollama: Analyze Variable Name"
      },
      {
        "command": "ollama-vscode-ext-template.mcp-analyze-function-comment",
        "title": "MCP: Analyze Function Comment"
      },
      {
        "command": "ollama-vscode-ext-template.display-diagnostics",
        "title": "Display diagnostics"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "ollama-vscode-ext-template.mcp-analyze-variable-name",
          "when": "editorTextFocus",
          "group": "navigation"
        },
        {
          "command": "ollama-vscode-ext-template.ollama-analyze-variable-name",
          "when": "editorTextFocus",
          "group": "navigation"
        },
        {
          "command": "ollama-vscode-ext-template.mcp-analyze-function-comment",
          "when": "editorTextFocus",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile",
    "lint": "eslint src --ext ts",
    "build": "tsc",
    "test": "jest --runInBand",
    "test:ollama": "jest tests/ollama.test.ts --runInBand",
    "test:filesystem": "jest tests/mcp/filesystem.test.ts --runInBand --detectOpenHandles --forceExit",
    "test:memory": "jest tests/mcp/memory.test.ts --runInBand --detectOpenHandles --forceExit",
    "reset-ollama": "ts-node src/ollama-manager.ts"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "ollama": "^0.5.14",
    "dotenv": "^16.0.3",
    "openai": "^4.0.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^18.0.0",
    "@types/node-fetch": "^2.6.9",
    "@types/vscode": "^1.80.0",
    "jest": "^29.7.0",
    "node-fetch": "^2.6.7",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-loader": "^9.4.3",
    "typescript": "^4.9.5",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  }
}
